@page
@model Supplier.Web.Pages.SupplierList.CreateModel


<br />
<h2 class="text-info">Create New Supplier</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Supplier.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Supplier.Name" />
            </div>
            <span asp-validation-for="Supplier.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Supplier.City"></label>
            </div>
            <div class="col-6">
                <input asp-for="Supplier.City" />
            </div>
            <span asp-validation-for="Supplier.City" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Supplier.PhoneNumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="Supplier.PhoneNumber" />
            </div>
            <span asp-validation-for="Supplier.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Supplier.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="Supplier.Email" />
            </div>
            <span asp-validation-for="Supplier.Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>

        </div>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}